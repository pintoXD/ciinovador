#
# Waveform windows
#
if {[catch {window new WaveWindow -name "Waveform 1" -geometry 1920x983+1079+369}] != ""} {
    window geometry "Waveform 1" 1920x983+1079+369
}
window target "Waveform 1" on
waveform using {Waveform 1}
waveform sidebar visibility partial
waveform set \
    -primarycursor TimeA \
    -signalnames name \
    -signalwidth 175 \
    -units ns \
    -valuewidth 75
waveform baseline set -time 30ns

set id [waveform add -signals  {
	{waves::$uvm:{uvm_test_top.env_h.agent_h.source_h}.tr}
	} ]
waveform hierarchy set -expandtype Attr:begin_time $id
set id [waveform add -signals  {
	{waves::$uvm:{uvm_test_top.env_h.refmod_h}.tr_out}
	} ]
waveform hierarchy set -expandtype Attr:begin_time $id

waveform xview limits 0 1980ns

